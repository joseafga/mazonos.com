<!DOCTYPE html>
<html lang="{{lang}}">

{{> head}}

<body>

    {{> nav}}

    <!-- Masthead -->
    <header class="masthead text-white text-center">
        <div class="overlay"></div>
        <div class="container">
            <div class="row">
                <div class="col-xl-9 mx-auto">
                    <h1 class="mb-5">{{{header.title}}}</h1>
                    <p class="sb-5" style="text-decoration: underline;">{{header.message}}</p>
                </div>
                <div class="col-md-10 col-lg-8 col-xl-7 mx-auto">
                    <!--<<form>
            <div class="form-row">
              <div class="col-12 col-md-9 mb-2 mb-md-0">
                <input type="email" class="form-control form-control-lg" placeholder="Enter your email...">
              </div>
              div class="col-12 col-md-3">
                <button type="submit" class="btn btn-block btn-lg btn-success">Sign up!</button>
              </div>

            </div>
          </form> -->
                </div>
            </div>
        </div>
    </header>

    <!-- Icons Grid -->
    <section class="features-icons bg-light text-center">
        <div class="container">
            <div class="row">
                {{#each features}}
                    <div class="col-lg-4">
                        <div class="features-icons-item mx-auto {{#if @last}}mb-0{{else}}mb-5{{/if}} mb-lg-3">
                            <div class="features-icons-icon d-flex">
                                <i class="icon-{{@key}} m-auto text-secondary"></i>
                            </div>
                            <h3>{{this.title}}</h3>
                            <p class="lead mb-0">{{this.text}}</p>
                        </div>
                    </div>
                {{/each}}
            </div>
        </div>
    </section>

    <!-- Image Showcases -->
    <section class="showcase">
        <div class="container-fluid p-0">
            {{#each showcase}}
                <div class="row no-gutters">
                    <div class="col-lg-6 {{#if_even @index}}order-lg-2{{/if_even}} text-white showcase-img" style="background-image: url('{{@root.url.root}}img/bg-showcase-{{math @index '+' 1}}.jpg');"></div>
                    <div class="col-lg-6 {{#if_even @index}}order-lg-1{{/if_even}} my-auto showcase-text">
                        <h2>{{this.title}}</h2>
                        <p class="lead mb-0">{{this.text}}</p>
                    </div>
                </div>
            {{/each}}
        </div>
    </section>

    <!-- Testimonials -->
    <section class="testimonials text-center bg-light">
        <div class="container">
            <h2 class="mb-5">{{helping.title}}</h2>
            <div class="row">
                {{#each helping.people as |desc name|}}
                    <div class="col-lg-4">
                        <div class="testimonial-item mx-auto mb-5 mb-lg-0">
                            <img class="img-fluid rounded-circle mb-3" src="{{@root.url.root}}img/testimonials-{{math @index '+' 1}}.jpg" alt="">
                            <h5>{{name}}</h5>
                            <p class="font-weight-light mb-0">{{desc}}</p>
                        </div>
                    </div>
                {{/each}}
            </div>
        </div>
    </section>

    {{> footer}}

</body>

</html>
