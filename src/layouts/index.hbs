<!DOCTYPE html>
<html lang="en">

{{> head}}

<body>

    {{> nav}}

    <!-- Masthead -->
    <header class="masthead text-white text-center">
        <div class="overlay"></div>
        <div class="container">
            <div class="row">
                <div class="col-xl-9 mx-auto">
                    <h1 class="mb-5" data-localize="home.header.title">{{header.title}}</h1>
                    <p class="sb-5" data-localize="home.header.message" style="text-decoration: underline;">{{header.message}}</p>
                </div>
                <div class="col-md-10 col-lg-8 col-xl-7 mx-auto">
                    <!--<<form>
            <div class="form-row">
              <div class="col-12 col-md-9 mb-2 mb-md-0">
                <input type="email" class="form-control form-control-lg" placeholder="Enter your email...">
              </div>
              div class="col-12 col-md-3">
                <button type="submit" class="btn btn-block btn-lg btn-success">Sign up!</button>
              </div>

            </div>
          </form> -->
                </div>
            </div>
        </div>
    </header>

    <!-- Icons Grid -->
    <section class="features-icons bg-light text-center">
        <div class="container">
            <div class="row">
                <div class="col-lg-4">
                    <div class="features-icons-item mx-auto mb-5 mb-lg-0 mb-lg-3">
                        <div class="features-icons-icon d-flex">
                            <i class="icon-screen-desktop m-auto text-secondary"></i>
                        </div>
                        <h3 data-localize="home.features.0.title">{{features.0.title}}</h3>
                        <p class="lead mb-0" data-localize="home.features.0.text">{{features.0.text}}</p>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="features-icons-item mx-auto mb-5 mb-lg-0 mb-lg-3">
                        <div class="features-icons-icon d-flex">
                            <i class="icon-layers m-auto text-primary"></i>
                        </div>
                        <h3 data-localize="home.features.1.title">{{features.1.title}}</h3>
                        <p class="lead mb-0" data-localize="home.features.1.text">{{features.1.text}}</p>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="features-icons-item mx-auto mb-0 mb-lg-3">
                        <div class="features-icons-icon d-flex">
                            <i class="icon-check m-auto text-primary"></i>
                        </div>
                        <h3 data-localize="home.features.2.title">{{features.2.title}}</h3>
                        <p class="lead mb-0" data-localize="home.features.2.text">{{features.2.text}}</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Image Showcases -->
    <section class="showcase">
        <div class="container-fluid p-0">
            <div class="row no-gutters">
                <div class="col-lg-6 order-lg-2 text-white showcase-img" style="background-image: url('img/bg-showcase-1.jpg');"></div>
                <div class="col-lg-6 order-lg-1 my-auto showcase-text">
                    <h2 data-localize="home.showcase.0.title">{{ showcase.0.title }}</h2>
                    <p class="lead mb-0" data-localize="home.showcase.0.text">{{ showcase.0.text }}</p>
                </div>
            </div>
            <div class="row no-gutters">
                <div class="col-lg-6 text-white showcase-img" style="background-image: url('img/bg-showcase-2.jpg');"></div>
                <div class="col-lg-6 my-auto showcase-text">
                    <h2 data-localize="home.showcase.1.title">{{showcase.1.title}}</h2>
                    <p class="lead mb-0" data-localize="home.showcase.1.text">{{showcase.1.text}}</p>
                </div>
            </div>
            <div class="row no-gutters">
                <div class="col-lg-6 order-lg-2 text-white showcase-img" style="background-image: url('img/bg-showcase-3.jpg');"></div>
                <div class="col-lg-6 order-lg-1 my-auto showcase-text">
                    <h2 data-localize="home.showcase.2.title">{{showcase.2.title}}</h2>
                    <p class="lead mb-0" data-localize="home.showcase.2.text">{{showcase.2.text}}</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Testimonials -->
    <section class="testimonials text-center bg-light">
        <div class="container">
            <h2 class="mb-5" data-localize="home.helping.title">{{helping.title}}</h2>
            <div class="row">
                <div class="col-lg-4">
                    <div class="testimonial-item mx-auto mb-5 mb-lg-0">
                        <img class="img-fluid rounded-circle mb-3" src="img/testimonials-1.jpg" alt="">
                        <h5>Diego Sarzi</h5>
                        <p class="font-weight-light mb-0" data-localize="home.helping.founder">{{helping.founder}}</p>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="testimonial-item mx-auto mb-5 mb-lg-0">
                        <img class="img-fluid rounded-circle mb-3" src="img/testimonials-2.jpg" alt="">
                        <h5>Rumbler Soppa</h5>
                        <p class="font-weight-light mb-0" data-localize="home.helping.idealizer">{{helping.idealizer}}</p>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="testimonial-item mx-auto mb-5 mb-lg-0">
                        <img class="img-fluid rounded-circle mb-3" src="img/testimonials-3.jpg" alt="">
                        <h5>SlackJeff</h5>
                        <p class="font-weight-light mb-0" data-localize="home.helping.bananapkg">{{helping.bananapkg}}</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    {{> footer}}

</body>

</html>
